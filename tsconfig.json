{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,    
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,    
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es6"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "node_modules",
    "dist"
  ]
}
